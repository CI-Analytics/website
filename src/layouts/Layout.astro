---
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CI-Analytics - Data Analysis and Internet Analytics" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
    <!-- Social sharing / embeds -->
    <meta property="og:title" content="CI-Analytics" />
    <meta property="og:description" content="Advanced Internet Data Analysis & Strategy" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/logo.jpeg" />
    <meta property="og:image:alt" content="CI-Analytics Logo" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="CI-Analytics" />
    <meta name="twitter:description" content="Advanced Internet Data Analysis & Strategy" />
    <meta name="twitter:image" content="/logo.jpeg" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navigation />
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }
  
  html {
    height: 100%;
  }

  body {
    background-color: #060b23;
    background-image:
      radial-gradient(circle at 20% 15%, rgba(0, 212, 255, 0.08), transparent 40%),
      radial-gradient(circle at 80% 10%, rgba(0, 102, 255, 0.08), transparent 45%),
      radial-gradient(circle at 30% 70%, rgba(0, 212, 255, 0.05), transparent 45%),
      linear-gradient(180deg, #0a0e27 0%, #1a2055 50%, #0a0e27 100%);
    background-attachment: fixed;
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding-top: 0;
    position: relative;
    overflow-x: hidden;
  }

  body::before {
    content: '';
    position: fixed;
    inset: 0;
    background-image:
      linear-gradient(90deg, rgba(0, 212, 255, 0.05) 1px, transparent 1px),
      linear-gradient(rgba(0, 212, 255, 0.05) 1px, transparent 1px);
    background-size: 80px 80px;
    opacity: 0.45;
    z-index: -1;
    pointer-events: none;
    animation: gridMove 30s linear infinite;
  }

  h1, h2, h3, h4, h5, h6 {
    margin: 0 0 1rem 0;
  }

  p {
    line-height: 1.6;
    margin: 0 0 1rem 0;
  }

  @keyframes gridMove {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 80px 80px;
    }
  }
</style>
