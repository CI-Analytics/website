---
import Layout from '../../layouts/Layout.astro';
import { db } from '../../lib/db';

// Get all channels with their latest analytics
const channels = db.prepare(`
  SELECT DISTINCT c.slug, c.name, c.description
  FROM channel_analytics ca
  RIGHT JOIN channels c ON ca.channel_slug = c.slug
  ORDER BY c.name ASC
`).all() as any[];

// Get latest data for each channel
const getLatestData = (slug: string) => {
  return db.prepare(`
    SELECT * FROM channel_analytics
    WHERE channel_slug = ?
    ORDER BY date DESC
    LIMIT 1
  `).get(slug) as any;
};

// Get import stats
const getImportStats = (slug: string) => {
  return db.prepare(`
    SELECT 
      COUNT(*) as total_imports,
      SUM(records_imported) as total_records,
      MAX(import_date) as last_import
    FROM import_logs
    WHERE channel_slug = ? AND status = 'success'
  `).get(slug) as any;
};

const channelsWithData = channels.map(ch => ({
  ...ch,
  latest: getLatestData(ch.slug),
  stats: getImportStats(ch.slug)
}));
