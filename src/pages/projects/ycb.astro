];

// Calculate portfolio statistics
const totalChannels = channels.length;
const totalSubscribers = channels.reduce((sum, ch) => sum + ch.subscribers, 0);
const totalViews = channels.reduce((sum, ch) => sum + ch.views, 0);
const totalVideos = channels.reduce((sum, ch) => sum + ch.videos, 0);
const activeChannels = channels.filter(ch => ch.status === 'active').length;
const avgViewsPerVideo = Math.round(totalViews / totalVideos);

// Format large numbers for display
function formatCount(num: number): string {
  if (num >= 1000000) {
    return (num / 1000000).toFixed(2).replace(/\.?0+$/, '') + 'M';
  } else if (num >= 1000) {
    return (num / 1000).toFixed(1).replace(/\.?0+$/, '') + 'K';
  }
  return num.toString();
}

// Format video count with comma
function formatVideos(num: number): string {
  if (num >= 1000) {
    return num.toLocaleString('en-US');
  }
  return num.toString();
}

const stats = {
  channels: totalChannels,
  subscribers: formatCount(totalSubscribers),
  views: formatCount(totalViews),
  videos: totalVideos.toLocaleString('en-US'),
  avgViews: formatCount(avgViewsPerVideo),
  active: activeChannels
};
