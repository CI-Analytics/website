---
import Layout from '../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

const dataRepositories = await getCollection('data');
const sortedRepositories = dataRepositories.sort((a: CollectionEntry<'data'>, b: CollectionEntry<'data'>) => 
  b.data.date.getTime() - a.data.date.getTime()
);

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  }).format(date);
}
---

<Layout title="Data | CI-Analytics">
  <!-- Hero Section with Title -->
  <section class="page-hero">
    <div class="container">
      <div class="hero-box">
        <h1>Our Data</h1>
        <p class="hero-subtitle">Comprehensive analytics and insights</p>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="page-section">
    <div class="container">
      <div class="data-intro">
        <p>
          Explore our comprehensive data analysis and insights. We process and analyze vast amounts 
          of internet data to provide you with actionable intelligence and strategic insights.
        </p>
      </div>

      <div class="data-grid">
        <div class="data-card">
          <div class="data-icon">üìä</div>
          <h2>Real-Time Analytics</h2>
          <p>
            Access live data dashboards with real-time insights into internet trends and metrics. 
            Monitor key performance indicators as they happen.
          </p>
          <ul>
            <li>Live data feeds</li>
            <li>Real-time dashboards</li>
            <li>Custom metrics</li>
          </ul>
        </div>

        <div class="data-card">
          <div class="data-icon">üìà</div>
          <h2>Trend Analysis</h2>
          <p>
            Discover emerging patterns and trends in internet data. Our advanced algorithms 
            identify opportunities before they become mainstream.
          </p>
          <ul>
            <li>Pattern recognition</li>
            <li>Trend forecasting</li>
            <li>Anomaly detection</li>
          </ul>
        </div>

        <div class="data-card">
          <div class="data-icon">üéØ</div>
          <h2>Custom Reports</h2>
          <p>
            Tailored reports designed specifically for your needs. From executive summaries 
            to detailed technical analysis, we've got you covered.
          </p>
          <ul>
            <li>Executive summaries</li>
            <li>Detailed analysis</li>
            <li>Custom visualizations</li>
          </ul>
        </div>

        <div class="data-card">
          <div class="data-icon">üîç</div>
          <h2>Deep Insights</h2>
          <p>
            Uncover hidden connections and relationships in your data. Our scientific approach 
            ensures reliability and accuracy in every analysis.
          </p>
          <ul>
            <li>Correlation analysis</li>
            <li>Statistical modeling</li>
            <li>Predictive analytics</li>
          </ul>
        </div>
      </div>

      <div class="data-stats">
        <h2>By The Numbers</h2>
        <div class="stats-grid">
          <div class="stat">
            <div class="stat-number">1B+</div>
            <div class="stat-label">Data Points Analyzed</div>
          </div>
          <div class="stat">
            <div class="stat-number">100+</div>
            <div class="stat-label">Case Studies</div>
          </div>
          <div class="stat">
            <div class="stat-number">500K+</div>
            <div class="stat-label">Cumulative Social Media Subscribers</div>
          </div>
          <div class="stat">
            <div class="stat-number">250M+</div>
            <div class="stat-label">Cumulative Social Media Views</div>
          </div>
          <div class="stat">
            <div class="stat-number">1TB+</div>
            <div class="stat-label">Stored Data</div>
          </div>
          <div class="stat">
            <div class="stat-number">500K+</div>
            <div class="stat-label">Screenshots of Data</div>
          </div>
          <div class="stat">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Data Monitoring</div>
          </div>
          <div class="stat">
            <div class="stat-number">10+</div>
            <div class="stat-label">Proven Performance Strategies</div>
          </div>
        </div>
      </div>

      <!-- Data Repositories Register -->
      <div class="repositories-section">
        <h2>Data Repositories</h2>
        <p class="section-subtitle">Explore our collection of data insights and analytics</p>
        <div class="repositories-grid">
          {sortedRepositories.map((repo: CollectionEntry<'data'>) => (
            <a href={`/data/${repo.slug}`} class="repo-card-link">
              <article class="repo-card">
                {repo.data.image && (
                  <div class="repo-thumbnail">
                    <img src={repo.data.image} alt={repo.data.title} />
                  </div>
                )}
                <div class="repo-content">
                  <div class="repo-type">{repo.data.type}</div>
                  <h3>{repo.data.title}</h3>
                  <p class="repo-description">{repo.data.description}</p>
                  <div class="repo-footer">
                    <span class={`repo-status ${repo.data.status === 'Inactive' ? 'status-inactive' : 'status-active'}`}>
                      {repo.data.status}
                    </span>
                    <span class="repo-date">{formatDate(repo.data.date)}</span>
                  </div>
                </div>
              </article>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    padding: 3rem 2rem;
    padding-top: 5rem;
    background: transparent;
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-box {
    background: rgba(0, 212, 255, 0.08);
    border: 1px solid rgba(0, 212, 255, 0.3);
    border-radius: 20px;
    padding: 3rem;
    backdrop-filter: blur(10px);
    text-align: left;
  }

  .hero-box h1 {
    font-size: 3.5rem;
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, #00D4FF, #0066FF);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: rgba(0, 212, 255, 0.9);
    margin: 0;
  }

  .page-section {
    padding: 3rem 2rem 4rem 2rem;
    background: transparent;
    color: white;
  }

  .data-intro {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.85);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .data-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 4rem;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .data-card {
    background: rgba(0, 212, 255, 0.05);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 15px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .data-card:hover {
    border-color: rgba(0, 212, 255, 0.5);
    background: rgba(0, 212, 255, 0.1);
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 212, 255, 0.2);
  }

  .data-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .data-card h2 {
    color: #00D4FF;
    margin: 0.5rem 0 1rem 0;
  }

  .data-card p {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .data-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .data-card li {
    color: rgba(0, 212, 255, 0.9);
    padding: 0.3rem 0;
    font-size: 0.95rem;
  }

  .data-card li::before {
    content: "‚úì ";
    margin-right: 0.5rem;
  }

  .data-stats {
    background: rgba(0, 212, 255, 0.05);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 15px;
    padding: 3rem;
    text-align: center;
  }

  .data-stats h2 {
    color: #00D4FF;
    margin-bottom: 2rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .stat {
    padding: 2rem;
    background: rgba(0, 212, 255, 0.08);
    border: 1px solid rgba(0, 212, 255, 0.3);
    border-radius: 15px;
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
  }

  .stat:hover {
    background: rgba(0, 212, 255, 0.12);
    border-color: rgba(0, 212, 255, 0.5);
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 212, 255, 0.2);
  }

  .stat-number {
    font-size: 2.8rem;
    color: #00D4FF;
    font-weight: 700;
    margin-bottom: 0.8rem;
    display: block;
  }

  .stat-label {
    color: rgba(255, 255, 255, 0.75);
    font-size: 0.95rem;
    letter-spacing: 0.5px;
  }
  /* Repositories Section */
  .repositories-section {
    margin-top: 4rem;
  }

  .repositories-section h2 {
    color: #00D4FF;
    font-size: 2.2rem;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .section-subtitle {
    font-size: 1.05rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 3rem;
  }

  .repositories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .repo-card-link {
    text-decoration: none;
    display: block;
  }

  .repo-card {
    background: rgba(10, 14, 39, 0.7);
    border: 1px solid rgba(0, 212, 255, 0.3);
    border-radius: 18px;
    overflow: hidden;
    transition: all 0.35s cubic-bezier(0.23, 1, 0.320, 1);
    backdrop-filter: blur(10px);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .repo-card:hover {
    border-color: rgba(0, 212, 255, 0.6);
    background: rgba(0, 212, 255, 0.05);
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0, 212, 255, 0.2);
  }

  .repo-thumbnail {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: rgba(0, 212, 255, 0.1);
  }

  .repo-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 0;
    filter: brightness(0.85);
  }

  .repo-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .repo-type {
    font-size: 0.8rem;
    color: rgba(0, 212, 255, 0.7);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.5rem;
  }

  .repo-card h3 {
    color: #00D4FF;
    margin: 0 0 0.8rem 0;
    font-size: 1.3rem;
    line-height: 1.4;
  }

  .repo-description {
    color: rgba(255, 255, 255, 0.75);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0 0 1rem 0;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .repo-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 212, 255, 0.2);
    margin-top: auto;
  }

  .repo-status {
    font-size: 0.8rem;
    padding: 0.35rem 0.9rem;
    border-radius: 20px;
    font-weight: 600;
    display: inline-block;
    border: 1px solid;
  }

  .repo-status.status-active {
    background: rgba(0, 255, 100, 0.15);
    color: #00FF64;
    border-color: rgba(0, 255, 100, 0.4);
  }

  .repo-status.status-inactive {
    background: rgba(255, 50, 50, 0.15);
    color: #FF6B6B;
    border-color: rgba(255, 50, 50, 0.4);
  }

  .repo-date {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
  }

  @media (max-width: 1024px) {
    .repositories-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .repositories-section {
      margin-top: 3rem;
    }

    .repositories-section h2 {
      font-size: 1.8rem;
      margin-bottom: 0.3rem;
    }

    .section-subtitle {
      font-size: 0.95rem;
      margin-bottom: 2rem;
    }

    .repositories-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .repo-card h3 {
      font-size: 1.1rem;
    }

    .repo-description {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .repositories-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .repo-card h3 {
      font-size: 1rem;
    }

    .repo-description {
      font-size: 0.85rem;
      -webkit-line-clamp: 2;
    }
  }
  @media (max-width: 1024px) {
    .data-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .page-hero {
      padding: 2rem 1.5rem;
      padding-top: 4.5rem;
    }

    .hero-box h1 {
      font-size: 2.5rem;
    }

    .data-stats {
      padding: 2rem 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: 1.5rem 1rem;
      padding-top: 9rem;
    }

    .hero-box {
      padding: 2rem 1.5rem;
      border-radius: 15px;
    }

    .hero-box h1 {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .data-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin-bottom: 2.5rem;
    }

    .data-card {
      padding: 1.2rem;
      border-radius: 12px;
    }

    .data-card h2 {
      font-size: 1.3rem;
    }

    .data-card p {
      font-size: 0.95rem;
    }

    .data-icon {
      font-size: 2rem;
    }

    .data-intro {
      font-size: 1rem;
      margin-bottom: 2rem;
    }

    .data-stats {
      padding: 1.5rem 1rem;
      border-radius: 12px;
    }

    .data-stats h2 {
      font-size: 1.8rem;
      margin-bottom: 1.5rem;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .stat {
      padding: 1.2rem;
      border-radius: 12px;
    }

    .stat-number {
      font-size: 2rem;
    }

    .stat-label {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .page-hero {
      padding: 1rem 0.8rem;
      padding-top: 3.5rem;
    }

    .hero-box {
      padding: 1.5rem 1rem;
      border-radius: 10px;
    }

    .hero-box h1 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .hero-subtitle {
      font-size: 0.9rem;
    }

    .page-section {
      padding: 1.5rem 0.8rem 2rem 0.8rem;
    }

    .data-intro {
      font-size: 0.95rem;
      margin-bottom: 1.5rem;
    }

    .data-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .data-card {
      padding: 1rem;
      border-radius: 10px;
    }

    .data-card h2 {
      font-size: 1.1rem;
      margin-bottom: 0.7rem;
    }

    .data-card p {
      font-size: 0.9rem;
      margin-bottom: 0.8rem;
    }

    .data-icon {
      font-size: 1.8rem;
      margin-bottom: 0.7rem;
    }

    .data-card li {
      font-size: 0.9rem;
      padding: 0.2rem 0;
    }

    .data-stats {
      padding: 1.2rem 0.8rem;
      border-radius: 10px;
    }

    .data-stats h2 {
      font-size: 1.5rem;
      margin-bottom: 1.2rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: 0.8rem;
    }

    .stat {
      padding: 1rem;
      border-radius: 10px;
    }

    .stat-number {
      font-size: 1.8rem;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.8rem;
    }
  }
</style>
