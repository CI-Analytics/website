---
import Layout from '../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => 
  b.data.date.getTime() - a.data.date.getTime()
);

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  }).format(date);
}
---

<Layout title="Blog | CI-Analytics">
  <!-- Hero Section with Title -->
  <section class="page-hero">
    <div class="container">
      <div class="hero-box">
        <h1>Blog</h1>
        <p class="hero-subtitle">Latest insights and articles</p>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="page-section">
    <div class="container">
      <div class="blog-grid">
        {sortedPosts.map((post: CollectionEntry<'blog'>) => (
          <a href={`/blog/${post.slug}`} class="blog-card-link">
            <article class="blog-card">
              {post.data.image && (
                <div class="blog-thumbnail">
                  <img src={post.data.image} alt={post.data.title} />
                </div>
              )}
              <div class="blog-card-content">
                <h2>{post.data.title}</h2>
                <p class="date">{formatDate(post.data.date)}</p>
                <p class="description">{post.data.description}</p>
                <span class="read-more">Read More â†’</span>
              </div>
            </article>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    padding: 3rem 2rem;
    padding-top: 5rem;
    background: transparent;
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-box {
    background: rgba(0, 212, 255, 0.08);
    border: 1px solid rgba(0, 212, 255, 0.3);
    border-radius: 20px;
    padding: 3rem;
    backdrop-filter: blur(10px);
    text-align: left;
  }

  .hero-box h1 {
    font-size: 3.5rem;
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, #00D4FF, #0066FF);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: rgba(0, 212, 255, 0.9);
    margin: 0;
  }

  .page-section {
    padding: 3rem 2rem 4rem 2rem;
    background: transparent;
    color: white;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .blog-card-link {
    text-decoration: none;
    display: block;
  }

  .blog-card {
    background: rgba(10, 14, 39, 0.7);
    border: 1px solid rgba(0, 212, 255, 0.3);
    border-radius: 18px;
    overflow: hidden;
    transition: all 0.35s cubic-bezier(0.23, 1, 0.320, 1);
    backdrop-filter: blur(10px);
    display: flex;
    flex-direction: column;
    position: relative;
    height: 100%;
  }

  .blog-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.1) 0%, transparent 100%);
    opacity: 0;
    transition: opacity 0.35s ease;
    pointer-events: none;
  }

  .blog-card:hover {
    border-color: rgba(0, 212, 255, 0.7);
    background: rgba(10, 14, 39, 0.85);
    transform: translateY(-12px);
    box-shadow: 0 20px 50px rgba(0, 212, 255, 0.35);
  }

  .blog-card:hover::before {
    opacity: 1;
  }

  .blog-thumbnail {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    position: relative;
    background: rgba(0, 102, 255, 0.1);
  }

  .blog-thumbnail::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 20, 40, 0.5) 0%, rgba(0, 50, 80, 0.4) 100%);
    opacity: 1;
    transition: opacity 0.35s ease;
    pointer-events: none;
    z-index: 2;
  }

  .blog-card:hover .blog-thumbnail::after {
    opacity: 0;
  }

  .blog-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
    filter: brightness(0.8) saturate(1.2);
    border-radius: 15px 15px 0 0;
    position: relative;
    z-index: 1;
  }

  .blog-card:hover .blog-thumbnail img {
    transform: scale(1.05);
    filter: brightness(0.9) saturate(1.3);
  }

  .blog-card-content {
    padding: 1.2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    background: linear-gradient(180deg, rgba(0, 212, 255, 0.05) 0%, rgba(0, 102, 255, 0.02) 100%);
    position: relative;
    z-index: 1;
  }

  .blog-card-content h2 {
    color: #00D4FF;
    margin: 0 0 0.2rem 0;
    font-size: 1.15rem;
    line-height: 1.3;
  }

  .date {
    color: rgba(0, 212, 255, 0.6);
    font-size: 0.75rem;
    margin: 0 0 0.6rem 0;
  }

  .description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.4;
    flex-grow: 1;
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-top: 0.8rem;
    border-top: 1px solid rgba(0, 212, 255, 0.12);
  }

  .author {
    color: rgba(0, 212, 255, 0.6);
    font-size: 0.85rem;
    font-style: italic;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: rgba(0, 102, 255, 0.3);
    border: 1px solid rgba(0, 102, 255, 0.5);
    color: #00D4FF;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    transition: all 0.3s ease;
  }

  .tag:hover {
    background: rgba(0, 102, 255, 0.4);
    border-color: rgba(0, 212, 255, 0.7);
  }

  .read-more {
    color: white;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 0.3rem;
    padding: 0.55rem 1.2rem;
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.2), rgba(0, 102, 255, 0.15));
    border: 1.5px solid rgba(0, 212, 255, 0.4);
    border-radius: 10px;
    font-size: 0.85rem;
  }

  .read-more:hover {
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.3), rgba(0, 102, 255, 0.25));
    border-color: rgba(0, 212, 255, 0.7);
    transform: translateX(3px);
    box-shadow: 0 5px 15px rgba(0, 212, 255, 0.25);
  }

  @media (max-width: 1440px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.8rem;
    }
  }

  @media (max-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .blog-card-content {
      padding: 1rem;
    }

    .blog-card-content h2 {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 768px) {
    .hero-box h1 {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .page-hero {
      padding-top: 5.5rem;
    }

    .page-section {
      padding-bottom: 6rem;
    }

    .blog-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .blog-card-content {
      padding: 1.3rem;
    }

    .blog-card-content h2 {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .hero-box {
      padding: 2rem;
    }

    .hero-box h1 {
      font-size: 2rem;
    }

    .blog-card h2 {
      font-size: 1.3rem;
    }
  }
</style>
