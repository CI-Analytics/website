          </div>
        </div>
      </div>

      <div class="admin-content">
        <h2>Channel Analytics Overview</h2>
        
        <div class="channels-table">
          <table>
            <thead>
              <tr>
                <th>Channel Name</th>
                <th>Last Update</th>
                <th>Subscribers</th>
                <th>Total Views</th>
                <th>Videos</th>
                <th>Data Points</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              {channelsWithData.map(channel => (
                <tr>
                  <td>
                    <strong>{channel.name}</strong>
                    <br />
                    <span class="slug">{channel.slug}</span>
                  </td>
                  <td>
                    {channel.latest?.date || 'No data'}
